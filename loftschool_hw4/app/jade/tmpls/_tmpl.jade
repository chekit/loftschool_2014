block config 
	include ../config
block mixins
	include ../mixins/_users-list

doctype
html.no-js(data-ng-app = "contacts")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title
			block title
				| #{pageTitle}
		meta(name='description', content='')
